const unsigned char myBitmap3 [] PROGMEM = {
	0x00, 0x40, 0x00, 0x00, 0xc0, 0x00, 0x00, 0x80, 0x00, 0x01, 0x08, 0x00, 0x02, 0x04, 0x00, 0x02, 
	0x04, 0x00, 0x04, 0x02, 0x00, 0x08, 0x03, 0x00, 0x08, 0x01, 0x00, 0x0b, 0x89, 0x00, 0x12, 0x90, 
